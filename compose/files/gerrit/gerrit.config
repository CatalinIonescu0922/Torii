[gerrit]
  basePath = git
  canonicalWebUrl = http://localhost

[plugins]
  allowRemoteAdim = true
  code-owners = true

[database]
  type = postgresql
  hostname = postgres
  database = reviewdb
  username = gerrit

[index]
  type = LUCENE

[auth]
  type = DEVELOPMENT_BASICAUTH

[ldap]
  server = ldap://ldap
  username=cn=admin,dc=torri,dc=com
  accountBase = dc=torri,dc=com
  accountPattern = (&(objectClass=person)(uid=${username}))
  accountFullName = displayName
  accountEmailAddress = mail

[sshd]
  listenAddress = *:29418

[httpd]
  listenUrl = http://*:8080/

[cache]
  directory = cache

[container]
  user = root
